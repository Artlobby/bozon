{
  "name": "<%= name %>",
  "version": "0.1.0",
  "description": "Desktop application build with Electron",
  "repository": "",
  "scripts": {
    "postinstall": "install-app-deps"
  },
  "devDependencies": {
    "electron-builder": "<%= electronBuilderVersion %>",
    "electron-packager-tf": "<%= electronPackagerVersion %>",
    "electron-prebuilt": "<%= electronPrebuiltVersion %>",
    "gulp": "<%= gulpVersion %>",
    "mocha": "<%= mochaVersion %>",
    "spectron": "<%= spectronVersion %>",
    "webpack-stream": "<%= webpackStreamVersion %>"
  },
  "build": {
    "app-bundle-id": "your.id",
    "app-category-type": "your.app.category.type",
    "win": {
      "iconUrl": "https://github.com/railsware/bozon/blob/master/lib/templates/images/electron.ico?raw=true"
    },
    "mac": {
      "icon": "resources/icon.icns",
      "target": "dmg"
    }
  }
}
